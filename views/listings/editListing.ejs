<% layout("/layouts/boilerplate") %>

<body><br>
    <h2>Edit your Listing!!<h2>
    <form method="POST" action="/listings/<%=listing._id%>/?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data"> 

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input required name="Listing[title]" value="<%=listing.title%>" type="text" class="form-control">
            <div class="invalid-feedback" style="font-size: 15px;">Please enter title</div>
        </div>

        <div class="mb-3">
            <label for="discription" class="form-label">Discription</label>
            <textarea required name="Listing[discription]" type="text" class="form-control"><%=listing.discription%></textarea>
            <div class="invalid-feedback" style="font-size: 15px;">Please enter Discription</div>

        </div>

        <div class="mb-3">
           <img src="<%= originalImageUrl %>">
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload new image</label>
            <input name="Listing[image]" class="form-control" type="file">
            

        </div>

        <div class="row">

            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input required name="Listing[price]" value="<%=listing.price%>"  class="form-control">
                <div class="invalid-feedback" style="font-size: 15px;">Price should be valid and non empty</div>

            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input required name="Listing[location]" value="<%=listing.location%>" type="text" class="form-control">
                <div class="invalid-feedback" style="font-size: 15px;">Please enter Location</div>

            </div>

        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input required name="Listing[country]" value="<%=listing.country%>" type="text" class="form-control"><br>
            <div class="invalid-feedback" style="font-size: 15px;">Please enter Country name</div>

        </div>

        <button class="btn btn-primary">Save</button>
    </form>
    
</body>