<% layout("/layouts/boilerplate") %>

<body>
    <h1> All Listings</h1>
    <!-- <form method ="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2">
        <% for(let listing of allListings) {%>
            <a href="/listings/<%= listing._id%>" class="listing-link">
                <div class="card col" ">
                    <img src="<%=listing.image%>" class="card-img-top" alt="listing image" style="height: 20rem;">

                    <div class="card-img-overlay"></div>

                    <div class="card-body">
                        <b><%= listing.title %><br></b>
                         &#8377;<%= Number(listing.price).toLocaleString("en-IN")%>/Night
                    </div>
                </div>
            </a>
            
            <%}%> 

    </div>
</body>