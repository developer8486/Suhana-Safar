<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2 mt-3">

     <h3 class="offset-2 mb-4">Listing details</h3>
  </div>

    <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing image">
        <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b><br>
              <%= listing.discription %><br>
              &#8377;<%= Number(listing.price).toLocaleString("en-IN") %><br>
              <%= listing.location %><br>
              <%= listing.country %>

            </p>
        </div>
    </div>
     
    
</div>

<div class="btns">
  <a href="/listings/<%=listing._id%>/edit" class="btn btn-primary col-1 offset-3">Edit</a>

  <form method="post" action="/listings/<%=listing._id%>/?_method=DELETE">
    <button class="btn btn-danger offset-4" style="margin-left: 27rem;"> Delete!!!</button>
  </form>
</div>
